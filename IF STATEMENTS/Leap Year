#include <iostream>
using namespace std;

int main (){
	int year;
	
	cout << "Leap Year Checker!" << endl;
	cout << "Enter the year: ";
	cin >> year;
	
	if ((year % 4 == 0) && (year % 100 != 0) || (year % 400 == 0)) {
		cout << "The year is on the leap year";
	}
	else {
		cout << "The year is not on a leap year";
	}
	
}
